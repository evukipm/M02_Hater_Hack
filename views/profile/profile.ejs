<%- include ../partials/navbar %>
<div class="main-container">
  <div class="profile-header">
    <h1>Perfil de <%= user.username %></h1>
    <a class="new_post_back-button" href="/"> < Volver</a>
  </div>
  <div class="login">
    <img class="profile-img" src="<%= user.avatar %>">
    <div class="login-form">
      <form action="/auth/login" method="post">
        <!-- description -->
        <% if(user.description){ %>
          <input class="login-input-description-field-readonly" type="text" value="<%= user.description %>" name="title" readonly>
        <% } else { %>
          <input class="login-input-description-field-readonly" type="text"  placeholder="Description" name="title" readonly>
        <% } %>

        <!--cohort -->  
        <% if(user.cohort){ %>
          <input class="login-input-field-readonly" type="text" value="<%= user.cohort %>" name="title" readonly>
        <% } else { %>
        <input class="login-input-field-readonly" type="text"  placeholder="Cohort" name="title" readonly>
        <% } %>

        <!--campus -->
        <% if(user.campus){ %>
          <input class="login-input-field-readonly" type="text" value="<%= user.campus %>" name="title" readonly>
        <% } else { %>
          <input class="login-input-field-readonly" type="text" placeholder="Campus" name="title" readonly>
        <% } %>
      </form>
    </div>
  </div>
  <h2>Tus mensajes</h2>
  <div class="profile-link">
  <% if(post) { %>
    <% post.forEach(post => {%>
        <a href="/post/<%= post._id %>"><%= post.title %></a>
    <% }) %>
    <% } else { %>
      <p class="login-register-link">El usuario no tiene ning√∫n lloriqueo</p>
    <% } %>
  </div>
</div>